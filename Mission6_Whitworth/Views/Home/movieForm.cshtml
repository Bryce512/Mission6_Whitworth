@model movieFormClass

<h1 class="display-4">Add a New Movie</h1>

<form method="post">
    <label asp-for="Title">Title: </label>
    <input asp-for="Title" type="text" placeholder="Title" id="Title" required>
    <br>
    <label asp-for="Rating">Rating: </label>
    <select asp-for="Rating" type="text" placeholder="Rating" id="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="NR">NR</option>
    </select>
    <br>
    <label asp-for="Category">Category: </label>
    <input asp-for="Category" type="text" placeholder="Category" id="Category" required>
    <br>
    <label asp-for="Year">Year: </label>
    <input asp-for="Year" type="number" placeholder="Year" id="Year" required>
    <br>
    <label asp-for="Director">Director: </label>
    <input asp-for="Director" type="text" placeholder="Director" id="Director" required>
    <br>
    <label asp-for="Edit">Edited?: </label>
    <select asp-for="Edit" >
        <option value="True">Yes</option>
        <option value="False">No</option>
    </select>
    <br>
    <label asp-for="Lent">Lent To: </label>
    <input asp-for="Lent" type="text" placeholder="Lent_to" id="Lent">
    <br>
    <label asp-for="Notes">Notes: </label>
    <input asp-for="Notes" type="text" placeholder="Notes" maxlength="25">
    
    <button type="submit">Submit</button>
</form>